<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1C284F"
    tools:context="com.crossshot.CrossShot1.MainActivity">

    <Button
        android:id="@+id/pla1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/buttonshape4"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/p1w"
        android:layout_alignRight="@+id/p1w"
        />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:text="V/S"
            android:textSize="28dp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textAlignment="center"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="117dp"
            android:layout_marginTop="46dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/pla2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:background="@drawable/buttonshape3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/rs"
        android:layout_toEndOf="@+id/rs" />


    <EditText
        android:id="@+id/p1w"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape7"
        android:clickable="false"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:focusableInTouchMode="false"
        android:text=""
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="210dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pla1"
        android:layout_toLeftOf="@+id/rs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/p2w"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape8"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="210dp"
        android:layout_alignBottom="@+id/p1w"
        android:layout_alignTop="@+id/p1w"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/pla2"
        android:layout_alignStart="@+id/pla2" />

        <Button
            android:id="@+id/rs"
            android:layout_width="129dp"
            android:layout_height="65dp"
            android:text="PLAY AGAIN"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textStyle="bold"
            android:visibility="visible"
            android:background="@drawable/buttontype3"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="468dp"
            android:layout_marginBottom="66dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />







    <TextView
        android:id="@+id/win1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:textSize="38sp"
        android:layout_below="@+id/p1w"
        android:layout_alignLeft="@+id/p1w"
        android:layout_alignStart="@+id/p1w"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/win2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/p2w"
        android:layout_alignLeft="@+id/p2w"
        android:layout_alignStart="@+id/p2w"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rs"
        android:layout_marginBottom="7dp"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="35sp"
        android:shadowColor="#0800FF"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:layout_alignLeft="@+id/win1"
        android:layout_alignStart="@+id/win1"
        android:layout_alignRight="@+id/p2w"
        android:layout_alignEnd="@+id/p2w"
        android:layout_alignTop="@+id/win1" />


</RelativeLayout>
